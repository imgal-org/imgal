<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.imgal</groupId>
    <artifactId>imgal</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>22</maven.compiler.source>
        <maven.compiler.target>22</maven.compiler.target>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
            </plugin>

            <!-- build the Rust library -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>build-rust-library</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
			    <executable>cargo</executable>
			    <!-- build imgal-java only -->
			    <workingDirectory>${project.basedir}/../</workingDirectory>
                            <arguments>
                                <argument>build</argument>
                                <argument>--package=imgal_c</argument>
                                <argument>--release</argument>
                            </arguments>
                            <skip>${skipRustBuild}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- copy the compiled Rust library into resources -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>copy-native-lib</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/native</outputDirectory>
                            <resources>
                                <!-- Linux -->
                                <resource>
					<directory>${project.basedir}/../target/release</directory>
                                    <includes>
                                        <include>libimgal_c.so</include>
                                    </includes>
                                    <excludes>
                                        <exclude>**/*.d</exclude>
                                        <exclude>**/*.rlib</exclude>
                                        <exclude>**/*.rmeta</exclude>
                                    </excludes>
                                </resource>
                                <!-- Windows -->
                                <resource>
					<directory>${project.basedir}/../target/release</directory>
                                    <includes>
                                        <include>imgal_c.dll</include>
                                    </includes>
                                </resource>
                                <!-- macOS -->
                                <resource>
					<directory>${project.basedir}/../target/release</directory>
                                    <includes>
                                        <include>libimgal_c.dylib</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- profile to skip Rust build if needed -->
    <profiles>
        <profile>
            <id>skipRustBuild</id>
            <properties>
                <skipRustBuild>true</skipRustBuild>
            </properties>
        </profile>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <skipRustBuild>false</skipRustBuild>
            </properties>
        </profile>
    </profiles>
</project>
